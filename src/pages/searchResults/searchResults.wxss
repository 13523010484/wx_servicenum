/* pages/searchResults/searchResults.wxss */
@import '/pages/commonCss/common.wxss';

page {
    background-color: #fff;
}

.tab_wrap {
    height: 88rpx;
    line-height: 88rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    font-size: 30rpx;
    color: #aaa;
    border-bottom: 1rpx #eee solid;
}

.tab_wrap .tab {
    text-align: center;
    flex: 1;
}

.tab_wrap .active {
    color: #a36122;
}

.tab_items {
    padding: 0 24rpx 30rpx;
}

.tab_item image {
    width: 100%;
    display: block;
}

.tab_item {
    margin-top: 30rpx;
}

.tab_item:first-child {
    margin-top: 0;
}

.header-wrap {
    display: flex;
    padding-top: 40rpx;
    justify-content: space-between;
}

.tab_item .header {
    color: #333;
    font-size: 36rpx;
}

.card-label {
    height: 48rpx;
    line-height: 48rpx;
    display: inline-block;
    box-sizing: border-box;
    margin-right: 20rpx;
    padding: 0 23rpx;
    font-size: 26rpx;
    color: #fba451;
    background-color: #fff6ed;
    border: 1rpx #fba451 solid;
    border-radius: 5rpx;
    margin-top: 13rpx;
}

.rights-discount {
    font-size: 24rpx;
    color: #fba451;
    line-height: 100%;
    margin-top: 24rpx;
}

.icon-book {
    min-width: 66rpx;
    height: 66rpx;
    line-height: 66rpx;
    border-radius: 100%;
    text-align: center;
    background-color: #fba451;
    color: #fff;
    font-size: 30rpx;
}

.icon-booked {
    background-color: #ccc;
    font-size: 22rpx;
}

/* 添加购物车样式  */

.page_shopping-cart, .page_shopping-badge {
    position: fixed;
    z-index: 100;
}

.page_shopping-cart {
    right: 18rpx;
    bottom: 170rpx;
    width: 102rpx;
    height: 102rpx;
}

.page_shopping-cart image {
    width: 100%;
}

.page_shopping-badge {
    bottom: 250rpx;
    right: 24rpx;
    width: 30rpx;
    height: 30rpx;
    border-radius: 100%;
    background-color: #f55;
    color: #fff;
    font-size: 20rpx;
    line-height: 30rpx;
    text-align: center;
}

/* tab 消费点样式 */

.header-h1 {
    text-align: center;
    font-size: 40rpx;
    color: #333;
    margin-top: 36rpx;
}

.header-desc {
    padding: 0 60rpx;
    text-align: center;
    font-size: 26rpx;
    color: #999;
    line-height: 40rpx;
    margin-top: 30rpx;
}

.header-label {
    display: flex;
    justify-content: center;
    padding: 28rpx 0 8rpx;
}

.header-label-center {
    display: flex;
    justify-content: space-between;
}

.header-label-center view {
    margin-right: 27rpx;
    width: 50rpx;
    height: 50rpx;
    box-sizing: border-box;
    border-radius: 100%;
    border: 1rpx #fba451 solid;
    font-size: 24rpx;
    color: #fba451;
    line-height: 50rpx;
    text-align: center;
}

.header-label-center view:last-child {
    margin-right: 0;
}
