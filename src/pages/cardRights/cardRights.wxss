@import '/pages/commonCss/common.wxss';

.list {
    margin: 24rpx 24rpx 0;
    font-size: 30rpx;
}

.item {
    height: 90rpx;
    line-height: 90rpx;
}

.item view:first-child {
    color: #fba451;
}

.item view:last-child {
    color: #aaa;
    font-size: 26rpx;
}

.num {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 45rpx 30rpx;
    background-color: #fff;
}

.num>view {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.num>view>text:first-child {
    color: #333;
    font-size: 36rpx;
}

.num>view>text:last-child {
    font-size: 24rpx;
    color: #aaa;
    padding-top: 20rpx;
}
