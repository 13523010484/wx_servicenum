@import '/pages/commonCss/common.wxss';

.page_authorize-continue {
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    line-height: 100rpx;
}

.page_authorize {
    margin-top: 24rpx;
    background-color: #fff;
}
.page_authorize>view{
    border-bottom: 1rpx #eee solid;
}

.page_authorize:first-child {
    margin-top: 0;
}

.user-name {
    margin-left: 30rpx;
    color: #333;
    font-size: 32rpx;
}

.authorize-continue {
    color: #fff;
    background-color: #fba451;
    font-size: 26rpx;
    width: 177rpx;
    text-align: center;
}

.page_authorize-continue image {
    width: 34rpx;
    height: 36rpx;
    position: absolute;
    right: 242rpx;
}

.authorize-info {
    padding: 30rpx;
    display: flex;
    justify-content: space-between;
}

.authorize-info .info .title {
    color: #fba451;
    font-size: 26rpx;
    background-color: #fff6ed;
    display: inline-block;
    border-radius: 5rpx;
    padding: 10rpx 20rpx;
}

.authorize-info .info .instructions, .authorize-info .info .deadline {
    color: #999;
    font-size: 26rpx;
}

.authorize-info .info .instructions {
    margin-top: 30rpx;
}

.authorize-info .info .deadline {
    margin-top: 10rpx;
}

.authorize-info .btn {
    background-color: #ddd;
    color: #fff;
    font-size: 26rpx;
    border-radius: 5rpx;
    width: 108rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin-top: 72rpx;
    text-align: center;
}

.page_authorize-continue .delete {
    background-color: #ff5e5e;
    color: #fff;
    font-size: 26rpx;
    width: 120rpx;
    text-align: center;
    position: absolute;
    right: 177rpx;
}