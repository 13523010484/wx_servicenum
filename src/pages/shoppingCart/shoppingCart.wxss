@import '/pages/commonCss/common.wxss';

page {
    background-color: #f5f5f5;
}

.page>view {
    border-bottom: none;
}

.page_edit {
    background-color: #fff;
    padding: 38rpx 24rpx;
    display: flex;
    justify-content: space-between;
    margin-bottom: 24rpx;
}

.page_edit label {
    display: flex;
    align-items: center;
}

.page_edit-left {
    min-width: 78rpx;
    display: flex;
    align-items: center;
}

.page_edit-center {
    width: 100%;
    margin-left: 38rpx;
}

.page_edit-center view:first-child {
    display: flex;
    align-items: center;
}

.page_edit-center view:first-child text:first-child {
    font-size: 30rpx;
    color: #333;
}

.page_edit-center view:first-child text:last-child {
    font-size: 20rpx;
    color: #fff;
    display: inline-block;
    min-width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    text-align: center;
    border-radius: 32rpx;
    margin-left: 14rpx;
}

.page_edit-center view {
    font-size: 24rpx;
    color: #999;
    margin-top: 18rpx;
}

.page_eidt-right {
    min-width: 108rpx;
    margin-right: 10rpx;
    display: flex;
    justify-content: space-between;
    padding-top: 14rpx;
}

.page_eidt-right image {
    width: 28rpx;
    display: block;
}

.page_eidt-right navigator>image {
    width: 26rpx;
    display: block;
}

/* footer css  */

.cart-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    font-size: 30rpx;
    height: 100rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    background: #fff;
    color: #333;
}

.btn-booking, .btn-submit {
    flex: 1;
    line-height: 100rpx;
    color: #fff;
    font-size: 30rpx;
    text-align: center;
}

.btn-booking {
    background-color: #f9a250;
}

.btn-submit {
    background-color: #d88a40;
}

.cart-footer label {
    width: 310rpx;
    height: 100rpx;
    line-height: 100rpx;
    display: flex;
    align-items: center;
}

icon {
    transform: scale(0.9);
}

.cart-footer label icon {
    margin-left: 24rpx;
    margin-right: 14rpx;
    display: flex;
    align-items: center;
}

.cart-footer label text {
    color: #999;
}
