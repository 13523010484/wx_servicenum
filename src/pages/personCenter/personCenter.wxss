page {
    background-color: #f5f5f5;
}

.userinfo_wrap {
    background: linear-gradient(to bottom right, #ffb534, #e76031);
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 166rpx;
    height: 166rpx;
    margin-top: 80rpx;
    border-radius: 50%;
    overflow: hidden;
}

.userinfo-nickname {
    margin-top: 4px;
    color: #fff;
    font-size: 36rpx;
}

.order-wrap {
    padding: 80rpx 100rpx 48rpx;
    display: flex;
    justify-content: space-between;
}

.order-wrap view {
    color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.order-wrap view text:first-child {
    font-size: 48rpx;
}

.order-wrap view text:last-child {
    font-size: 24rpx;
}

.userinfo_items {
    background-color: #fff;
    margin-bottom: 24rpx;
}

.item {
    padding: 0 48rpx;
    font-size: 30rpx;
    height: 90rpx;
    display: flex;
    align-items: center;
    color: #333;
}

.item>image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 15rpx;
}

.userinfo_items>.item {
    border-bottom: 1rpx #eee solid;
}

.userinfo_items>.item:last-child {
    border-bottom: none;
}

.item text:first-child {
    width: 40rpx;
    height: 40rpx;
    background: pink;
    display: inline-block;
    margin-right: 20rpx;
}

.icon_arrow>.item {
    position: relative;
}

.icon_arrow>.item:after {
    content: "";
    display: inline-block;
    height: 12rpx;
    width: 12rpx;
    border-width: 4rpx 4rpx 0 0;
    border-color: #c8c8cd;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: absolute;
    top: 50%;
    margin-top: -8rpx;
    right: 48rpx;
}

.version_info {
    display: flex;
    justify-content: space-between;
}

.version_info>view:first-child {
    display: flex;
}

.version_info>view image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 15rpx;
}

.bind_cancel {
    color: #e64340;
}
