@import '/pages/commonCss/common.wxss';

.tab_wrap {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 32rpx;
    color: #aaa;
    background-color: #fff;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tab_wrap>view {
    flex: 1;
    text-align: center;
}

.active {
    border-bottom: 2rpx #a36122 solid;
    color: #a36122;
}

.tab_items {
    margin-top: 30rpx;
    background-color: #fff;
}

.tab_items>view:last-child {
    color: #999;
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0 24rpx;
}

.tab_item {
    padding: 24rpx;
    border-bottom: 1rpx #eee solid;
    display: flex;
    justify-content: space-between;
}

.item-left>view {
    line-height: 48rpx;
    font-size: 26rpx;
    color: #999;
}

.item-left>view:first-child {
    margin-top: 0;
    color: #333;
    font-size: 32rpx;
}

.item-left>view:first-child>text:first-child {
    margin: 15rpx;
    margin-left: 0;
}

.item-right {
    color: #999;
    font-size: 26rpx;
}

.font_green {
    color: #81c951;
    width: 120rpx;
    text-align: right;
}

.font_red {
    color: #fff;
    background-color: #f9a250;
    width: 120rpx;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 60rpx;
    text-align: center;
}

.tab_item.btn_vertical {
    align-items: center;
}

.item-right.btn {
    background-color: #f9a250;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 60rpx;
    min-width: 120rpx;
    text-align: center;
    color: #fff;
}

.item-right.cancel {
    background-color: #f5f5f5;
    color: #ddd;
}
